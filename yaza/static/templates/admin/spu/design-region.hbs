<div class="panel-design-region panel panel-default">

  <div class="panel-heading">
    <a class="btn-collapse btn btn-xs pull-right" style="display: none">
      <i class="fa fa-chevron-up"></i>
    </a>
    <span class="text-muted">
      新建设计区
    </span>
    <em></em>
  </div>

  <div class="panel-body">
    <form class="form-horizontal design-region-form">

      <div class="form-group">
        <label for="" class="control-label col-md-3">定制区名称</label>
        <div class="col-md-4">
          <input type="" class="form-control" placeholder='例如前胸...'/>
        </div>
        <label class="control-label text-danger" style='display: none'>* 名称不能为空</label>
      </div>

      <div class="form-group">
        <label for="" class="control-label col-md-3">尺寸<small class='text-info'>(英寸)</small></label>
        <div class="col-md-2">
          <input type="number" class="form-control width" placeholder='宽'/>   
        </div>
        <div class="col-md-1">
          <div class='control-label'>X</div>
        </div>
        <div class="col-md-2">
          <input type="number" class="form-control height" placeholder='高'/>
        </div>
        <label class="control-label text-danger" style='display: none'>* 尺寸不能为空</label>
      </div>

      <div class="form-group">
        <label for="" class="control-label col-md-3">图片</label>
        <div class="col-sm-3">
          <span class="btn btn-success fileinput-button">
            <i class="fa fa-plus"></i>
            <span>选择文件</span>
            <input type="file" name="file">
          </span>
        </div>
        <a class="fancybox" rel="group">
          <div class="col-md-2">
            <div class="thumbnail">
              <img alt="" />
            </div>
          </div>
        </a>
        <label class="control-label text-danger" style='display: none'>* 图片不能为空</label>
      </div>

      <div class="uploading-progress row" style='display: none'>
        <div class="col-md-11">
          <div class="progress progress-striped active">
            <div class="progress-bar"  role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
              0%
            </div>
          </div>
        </div>
        <div class="col-md-1">
          <button class="upload-cancel-btn btn btn-danger btn-xs">取消</button>
        </div>
      </div>

    </form>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="pull-right">
        <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary btn-ok">确认</button>
      </div>
    </div>
  </div>
</div>
