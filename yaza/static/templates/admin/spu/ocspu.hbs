<div class="col-md-10 col-md-offset-1">
  <div class="panel-new-ocspu panel panel-default">
    <div class="panel-heading">
      <a class="btn-collapse btn btn-xs pull-right" style="display: none">
        <i class="fa fa-chevron-up"></i>
      </a>
      <span class="text-muted">
        新建OCSPU
      </span>
      <em></em>
    </div>
    <div class="panel-body">
      <form class="form-horizontal ocspu-form" method='post' action='/spu-ws/ocspu.json' enctype='multipart/form-data'>
        <div class="form-group">
          <label for="" class="control-label col-sm-2">底色名称</label>
          <div class="col-sm-4">
            <input type="text" placeholder="例如棕红色, 银灰色..." class='form-control'>
          </div>
          <label class="control-label text-danger" style='display: none'>* 底色名称不能为空</label>
        </div>

        <div class="form-group">
          <label for="" class="control-label col-sm-2">底色RGB</label>
          <div class="col-sm-2">
            <input type="text" value=''/>
          </div>
          <label class="control-label text-danger" style='display: none'>* 底色不能为空</label>
        </div>

        <div class="form-group">
          <label for="" class="control-label col-sm-2">材质图</label>
          <div class="col-sm-2">
            <span class="btn btn-success fileinput-button">
                <i class="fa fa-plus"></i>
                <span>选择文件</span>
                <input type="file" name="file">
            </span>
          </div>
          <label class="control-label text-danger" style='display: none'>* 材质图不能为空</label>
          <a class="fancybox" rel="group">
            <div class="col-md-2">
              <div class="thumbnail">
                <img alt="" />
              </div>
            </div>
          </a>
        </div>
        <div class="uploading-progress row" style='display: none'>
          <div class="col-md-11">
            <div class="progress progress-striped active">
              <div class="progress-bar"  role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                0%
              </div>
            </div>
          </div>
          <div class="col-md-1">
            <button class="upload-cancel-btn btn btn-danger btn-xs">取消</button>
          </div>
        </div>
      </form> 

      <div class="aspect" style="display: none">
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="pull-right">
          <button class="btn btn-danger btn-cancel"><span aria-hidden="true">&times;</span>取消</button>
          <button class="btn btn-primary btn-ok">确认</button>
          <button class="btn-new-aspect btn btn-primary" style="display: none">
            <i class="fa fa-plus"></i>
            增加面
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
