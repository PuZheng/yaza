<div class="row">
  <div class="col-md-6">
    <div class="logo">
      <img src="/static/assets/logo-white.png" alt="logo" />
    </div>
  </div>
  <div class="col-md-6">
    <button type='button' class="btn btn-success btn-lg btn-submit" data-loading-text="{{t "Submitting"}}...">
      {{t "Submit"}}
    </button>
  </div>
</div>

<div class="ocspu-selector">
  {{#each spu.ocspuList }}
  <div class="thumbnail">
    <img src="{{this.cover}}" alt="{{this.name}}" title="{{this.color}}"/>
  </div>
  {{/each}}
</div>
<div class="aspect-selector text-center">
</div>
<div class="design-region-selector">
  <div class="list-group">
  </div>
</div>


<div class="add-object-btns">
  <div class="row">
    <div class="col-sm-6">
      <button class="btn btn-primary add-img-btn" data-toggle='modal' data-target='.add-img-modal'
        {{#if defaultDesignImage }}disabled{{/if}}
        >
        <i class="fa fa-file-image-o"></i>
        {{t "Add image"}}
      </button>
    </div>
    <div class="col-sm-6">
      <button class="btn btn-primary add-text-btn" data-toggle='modal' data-target='.add-text-modal'>
        <i class="fa fa-pencil-square"></i>
        {{t "Add text"}}
      </button>
    </div>
  </div>
</div>

<div class='row'>
  <div class="text-operators" style="display: none">
  </div>
</div>

<div class="object-manager">
</div>



<div class="modal fade add-img-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class='pull-right' name="tags-div">
          <button class='btn-tag btn btn-primary'>
            <i class="fa fa-tag"></i><span class='selected-tag'>{{t "All"}}</span>
          </button>
          <div class="tags-list" style='display: none'>
            <div class="row">
              <div class="panel panel-info col-md-10 col-md-offset-1">
                <div class="panel-body">
                  <button type="button" class="close" aria-hidden="true">&times;</button>
                  <a href="#" class='tag text-success' data-tag-id="0"><b>{{t "All"}}</b></a>
                    {{#each tagList}}
                      <a href="#" class='tag text-danger' data-tag-id="{{this.id}}"><b>{{this.tag}}</b></a>
                    {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <ul class="nav nav-tabs">
          <li><a data-toggle="tab" href=".builtin-pics">{{t "Builtin"}}</a></li>
          <li><a href=".customer-pics" data-toggle="tab">{{t "Yours"}}</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane fade builtin-pics">
            <ul class="thumbnails gallery picker"></ul>
          </div>
          <div class="tab-pane fade customer-pics">
          </div>
          <div class="toast" style='display: none'>
              <span>
                {{t "No more images"}}
              </span>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class='upload-img-form' enctype="multipart/form-data">
            <span class="btn btn-success fileinput-button">
              <i class="glyphicon glyphicon-plus"></i>
              <span>{{t "Upload new"}}</span>
              <input type="file" name="file">
            </span>

          <div class='uploading-progress'>
            <!-- The file uploads will be shown here -->
          </div>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">{{t "Close"}}</button>
        <button type="button" class="btn-ok btn btn-primary" data-dismiss="modal">{{t "OK"}}</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal fade add-text-modal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <div class="modal-header">
          <h4 class="modal-title">{{t "Input text"}}</h4>
        </div>
        <div class="modal-body">
          <div class="text-center">
            <input type="text" placeholder="{{t 'Input text'}}"/>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{t "Close"}}</button>
          <button type="button" class="btn btn-ok btn-primary" data-dimiss="modal">{{t "OK"}}</button>
        </div>
      </div>
    </div>
  </div>
</div>
