<div class="row">
  <div class="col-sm-7">
    <div class="hotspot">
      <div class="design-region-selector">
        <div name="current-design-region" class="list-group">
        </div>
      </div>
      <div class="design-regions">
      </div>
      <img src="" alt="" crossorigin="anonymous"/>  

      <div class='mask text-center'>
        <i class="fa fa-spinner fa-spin fa-4x" style='vertical-align: middle;color:yellow;'></i>
      </div>
    </div>
  </div>
  <div class="col-sm-5">
    <div class="ocspu-selector">
        {{#each spu.ocspuList }}
          <div class="thumbnail">
            <img src="{{this.cover}}" alt="{{this.name}}" title="{{this.color}}"/>
          </div>
        {{/each}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="aspect-selector">
    </div>
  </div>
</div>
