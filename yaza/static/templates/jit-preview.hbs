<div class="row">
  <div class="col-sm-12">
    <div class="hotspot">
      <div class="design-region-selector">
        <ul name="current-design-region" class="list-group">
        </ul>
      </div>
      <div class="design-regions">
      </div>
      <img src="" alt=""/>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="ocspu-selector">
        {{#each spu.ocspuList }}
          <div class="thumbnail">
            <img src="{{this.cover}}" alt="{{this.name}}" title="{{this.color}}"/>
          </div>
        {{/each}}
    </div>
  </div>
  <div class="col-sm-6">
    <div class="aspect-selector">
    </div>
  </div>
</div>
